@page "/EditarCategorias/{CurrentID}"
@using Service
@using Model
@inject ICategoryService objICat
@inject NavigationManager navigarionManager

<h2>Editar</h2>
<hr />

<form>
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <input form="Name" class="form-control" @bind="@objCat.CategoryId" />
            </div>
            <div class="form-group">
                <label for="Name" class="control-label">Nombre</label>
                <input form="Name" class="form-control" @bind="@objCat.Name" />
                <div class="form-group">
                    <label for="Icono" class="control-label">Icono</label>
                    <input form="Icono" class="form-control" @bind="@objCat.Icono" />
                </div>
                <div class="form-group">
                    <label for="Status" class="control-label">Estado</label>
                    <select @bind="@objCat.Stated" class="form-control">
                        <option value="">--Selecione Estado--</option>
                        <option value="1">Activar</option>
                        <option value="0">Desactivar</option>
                    </select>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <input type="button" class="btn btn-primary" @onclick="@EditarCategorias" value="Actualizado" />
                <input type="button" class="btn btn-warning" @onclick="@Cancel" value="Cancelar" />
            </div>
        </div>
    </div>
</form>

@code {

    [Parameter]
    public string CurrentID { get; set; }

    Category objCat = new Category();

    protected override async Task OnInitializedAsync()
    {

        objCat = await Task.Run(() => objICat.GetById(Convert.ToInt32(CurrentID)));
    }

    protected void EditarCategorias()
    {
        objICat.UpdateCategory(objCat);
        navigarionManager.NavigateTo("Categorias");
    }

    void Cancel()
    {
        navigarionManager.NavigateTo("Categorias");
    }
}
