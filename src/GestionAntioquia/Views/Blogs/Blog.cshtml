@model IEnumerable<Model.DTOs.BlogDto>

@{
    ViewData["Title"] = "Blog, ";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["imagen"] = Url.Content("~/images/blog.jpg");
}

<!-- Home -->
<div class="home">
    <div class="parallax_background parallax-window" data-parallax="scroll" data-image-src="@ViewData["imagen"]" data-speed="0.8"></div>
    <div class="home_container">
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="home_content">
                        <div class="home_title">Blog</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@*<div style="width:100%; height:150px; background-color:forestgreen"></div>*@

@if (Model.Any())
{
    <!-- Blog -->

    <div class="blog">
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="blog_posts_container marginTop">
                        <div class="blog_posts">

                            @foreach (var item in Model)
                            {

                                <!-- Blog Post -->
                                <div class="blog_post">
                                    <div class="blog_post_container">

                                        <div class="location_icon">
                                            <span> <strong> @item.UpdateDate.ToString("dd-MM-yyyy") </strong></span>
                                        </div>

                                        @if (item.CoverPage == null)
                                        {
                                            <div class="blog_post_image"><img src="~/images/blog.jpg" alt="@item.Name"></div>
                                        }
                                        else
                                        {
                                            <div class="blog_post_image"><a asp-controller="Store" asp-action="Shopitems" asp-route-itemUrl="@item.BlogUrl"><img src="~/images/Places/@item.SquareCover" asp-append-version="true"></a></div>
                                        }

                                        <div class="blog_post_content">

                                            <div class="blog_post_title">
                                                <h3>@item.Name</h3>
                                            </div>
                                            <div class="blog_post_tags">
                                                <ul class="d-flex flex-row align-items-start justify-content-start">
                                                    <li><a asp-controller="Company" asp-action="Details" asp-route-urlName="@item.BlogUrl">@item.Name </a></li>
                                                    <li><a href="#">Urbano</a></li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }

                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="blog_posts_more">

                    </div>
                </div>
            </div>
        </div>
    </div>



}
else
{

    <h1>En el momento no hay registros</h1>
}


@section Scripts {

    @{await Html.RenderPartialAsync("_ScriptPlacesAliados");}
}
