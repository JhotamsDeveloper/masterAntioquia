                <input asp-for="CoverPage" class="form-control" />
                <span asp-validation-for="CoverPage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SquareCover" class="control-label"></label>
                <input asp-for="SquareCover" class="form-control" />
