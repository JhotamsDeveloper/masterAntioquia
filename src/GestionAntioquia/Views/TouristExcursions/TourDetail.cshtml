@model Model.DTOs.TouristExcursionsDto

@{
    ViewData["Title"] = Model.Name + ", ";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["imagen"] = Url.Content($"{Model.CoverPage}");

}

<!-- Home -->
<div class="home">
    <div class="parallax_background parallax-window" data-parallax="scroll" data-image-src="@ViewData["imagen"]" data-speed="0.8"></div>
    <div class="home_container">
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="home_content">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Listing -->

<div class="listing">
    <div class="container">
        <div class="row">
            <!-- Listing Content -->
            <div class="col-lg-8">
                <div class="listing_content">
                    <div class="section_title">
                        <h1>
                            @Html.DisplayFor(model => model.Name)
                        </h1>
                    </div>
                    <div class="listing_text">
                        <text>
                            @Html.DisplayFor(model => model.Description)
                        </text>
                    </div>

                    <!-- Galleries -->
                    <div class="container mt-40">
                        <div class="section_title">
                            <h1 class="text-center">Galleria</h1>
                        </div>
                        <div class="row justify-content-center">
                            @foreach (var item in Model.Galleries)
                            {
                                <div class="review_image m-2">
                                    <a class="galleriesTour"
                                       href="@item.NameImage">
                                        <img src="@item.NameImage" alt="" />
                                    </a>
                                </div>
                            }
                        </div>
                    </div>


                    <!-- Reviews -->
                    <div class="reviews">
                        <div class="section_title"><h1>2 Comentarios</h1></div>
                        <div class="reviews_container">

                            <!-- Review -->
                            <div class="review d-flex flex-lg-row flex-column align-items-start justify-content-start">
                                <div class="review_user_container">
                                    <div>
                                        <div class="review_user d-flex flex-lg-column flex-row align-items-center justify-content-start">
                                            <div class="review_user_image">
                                                <img src="~/images/user_4.jpg" alt="" />
                                            </div>
                                            <div class="text-lg-center">
                                                <div class="review_user_name">
                                                    <a href="#">Maria Smith</a>
                                                </div>
                                                <div class="review_count">
                                                    <a href="#">5 reviews</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="review_content">
                                    <div class="review_title_container d-flex flex-row align-items-start justify-content-start">
                                        <div class="review_title">"Great place"</div>
                                        <div class="review_rating ml-auto">4,5</div>
                                    </div>
                                    <div class="review_text">
                                        <p>
                                            Great place to visit, the food is awesome, I
                                            really love it. I would recommend it to other
                                            people.
                                        </p>
                                    </div>
                                    <div class="review_images d-flex flex-row align-items-start justify-content-start flex-wrap">
                                        <div class="review_image">
                                            <a class="colorbox"
                                               href="~/images/review_1_large.jpg">
                                                <img src="~/images/review_1.jpg" alt="" />
                                            </a>
                                        </div>
                                        <div class="review_image">
                                            <a class="colorbox"
                                               href="~/images/review_2_large.jpg">
                                                <img src="~/images/review_2.jpg" alt="" />
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Listing Sidebar -->
            <div class="col-lg-4 sidebar_col">
                <div class="sidebar">
                    <!-- Work Hours -->
                    <div class="work_hours d-flex flex-row align-items-center justify-content-start">
                        <div class="sidebar_info_icon">
                            <img src="~/images/ws.svg" alt="" />
                        </div>
                        <div class="sidebar_info_content">
                            <span>Escribanos: </span> <a href="https://api.whatsapp.com/send?phone=57 @Model.Place.Phone" target="_blank">@Model.Place.Phone</a>
                        </div>
                    </div>

                    <!-- Info -->
                    <div class="sidebar_info">
                        <ul>
                            <li class="d-flex flex-row align-items-start justify-content-start">
                                <div class="sidebar_info_icon">
                                    <img src="~/images/info_1.png" alt="" />
                                </div>
                                <div class="sidebar_info_content">
                                    <span>Municipio: </span>@Model.Place.City
                                </div>
                            </li>
                            <li class="d-flex flex-row align-items-start justify-content-start">
                                <div class="sidebar_info_icon">
                                    <img src="~/images/info_1.png" alt="" />
                                </div>
                                <div class="sidebar_info_content">
                                    <span>Dirección: </span>@Model.Place.Address
                                </div>
                            </li>
                            <li class="d-flex flex-row align-items-start justify-content-start">
                                <div class="sidebar_info_icon">
                                    <img src="~/images/info_3.png" alt="" />
                                </div>
                                <div class="sidebar_info_content">
                                    <span>E-mail: </span>@Model.Place.Email
                                </div>
                            </li>
                        </ul>
                    </div>

                    <!-- Similar Places -->
                    <div class="similar_places">
                        <div class="section_title"><h1>Organizado por</h1></div>
                        <div class="similar_places_container d-flex flex-lg-column flex-row align-items-start justify-content-between flex-wrap">
                            <!-- Similar Place -->
                            <div class="similar_place">
                                <div class="similar_place_image">
                                    <div class="location_icon">
                                        <a href="#"><img src="~/images/loc.png" alt="" />@Model.Place.City</a>
                                    </div>
                                    <div class="similar_place_rating">4,5</div>
                                    <img src="@Model.Place.SquareCover" alt="@Model.Place.Name" />
                                </div>
                                <div class="similar_place_title">
                                    <a href="#">@Model.Place.Name</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    @{await Html.RenderPartialAsync("_ScriptPlacesDetails");}
}












