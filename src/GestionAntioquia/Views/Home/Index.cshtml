@model IEnumerable<Model.DTOs.BlogDto>


@{
    ViewData["Title"] = "Santa Fe de Antioquia,";
}

<!-- Home -->

<div class="home_carousel">

    <!-- Home Slider -->
    <div class="home_slider_container">
        <div class="owl-carousel owl-theme home_slider">

            <!-- Slide -->
            <div class="slide">
                <div class="background_image" style="background-image:url(../images/alcaldia.jpg)"></div>
                <partial name="_Search" />
            </div>

            <!-- Slide -->
            <div class="slide">
                <div class="background_image" style="background-image:url(../images/Flor.jpg)"></div>
                <partial name="_Search" />
            </div>

            <!-- Slide -->
            <div class="slide">
                <div class="background_image" style="background-image:url(../images/santa.jpg)"></div>
                <partial name="_Search" />
            </div>

        </div>

        <!-- Home Slider Dots -->

        <div class="home_slider_dots">
            <ul id="home_slider_custom_dots" class="home_slider_custom_dots">
                <li class="home_slider_custom_dot active">01.</li>
                <li class="home_slider_custom_dot">02.</li>
                <li class="home_slider_custom_dot">03.</li>
            </ul>
        </div>

    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="staticBackdrop" data-backdrop="static" data-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                @if (Model.Any())
                {
                    <!-- Blog -->

                    @foreach (var item in Model)
                    {

                        <div class="card m-2">
                            <div class="card-body blog_post_container">
                                <div class="container">
                                    <div class="row">
                                        
                                        <!--Grid column-->
                                        <div class="col-md-12">
                                            <a href="@Url.Content("blog/" + item.BlogUrl)">
                                                <h4>@item.Name</h4>
                                            </a>
                                            <hr />
                                            <p>@{
                                                if (item.Description.Length > 255)
                                                {
                                                    @item.Description.Substring(0, 255);
                                                }
                                                else {
                                                    @item.Description
                                                }
                                            }</p>
                                        </div>
                                    </div>
                                 </div>
                            </div>
                        </div>

                    }




                }
                else
                {

                    <h1>En el momento no hay registros</h1>
                }





            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Understood</button>
            </div>
        </div>
    </div>
</div>

<!-- Categories -->

<div class="categories">
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="categories_container d-flex flex-md-row flex-column align-items-start justify-content-start">

                    <!-- Category -->
                    <div class="category text-center">
                        <a asp-controller="Places" asp-action="Restaurant">
                            <div class="d-flex flex-md-column flex-row align-items-md-center align-items-md-start align-items-center justify-content-start">
                                <div class="cat_icon"><img src="~/images/icon_1.svg" class="svg" alt="https://www.flaticon.com/authors/monkik"></div>
                                <div class="cat_title">Donde Comer</div>
                            </div>
                        </a>
                    </div>

                    <!-- Category -->
                    <div class="category text-center">
                        <a asp-controller="Products" asp-action="WhereToSleep">
                            <div class="d-flex flex-md-column flex-row align-items-md-center align-items-md-start align-items-center justify-content-start">
                                <div class="cat_icon"><img src="~/images/icon_2.svg" class="svg" alt="https://www.flaticon.com/authors/monkik"></div>
                                <div class="cat_title">Donde Dormir</div>
                            </div>
                        </a>
                    </div>

                    <!-- Category -->
                    <div class="category text-center">
                        <a asp-controller="TouristExcursions" asp-action="Index">
                            <div class="d-flex flex-md-column flex-row align-items-md-center align-items-md-start align-items-center justify-content-start">
                                <div class="cat_icon"><img src="~/images/icon_3.svg" class="svg" alt="https://www.flaticon.com/authors/monkik"></div>
                                <div class="cat_title">Qué hacer</div>
                            </div>
                        </a>
                    </div>

                    <!-- Category -->
                    <div class="category text-center">
                        <a href="listings.html">
                            <div class="d-flex flex-md-column flex-row align-items-md-center align-items-md-start align-items-center justify-content-start">
                                <div class="cat_icon"><img src="~/images/calendar.svg" class="svg" alt="https://www.flaticon.com/free-icon/calendar_2693507?term=event&page=1&position=3"></div>
                                <div class="cat_title">Eventos</div>
                            </div>
                        </a>
                    </div>

                    <!-- Category -->
                    <div class="category text-center">
                        <a href="listings.html">
                            <div class="d-flex flex-md-column flex-row align-items-md-center align-items-md-start align-items-center justify-content-start">
                                <div class="cat_icon"><img src="~/images/icon_5.svg" class="svg" alt="https://www.flaticon.com/authors/monkik"></div>
                                <div class="cat_title">Tour</div>
                            </div>
                        </a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>


@if (Model.Any())
{
    <!-- Blog -->

    <div class="blog">
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="blog_posts_container marginTop">
                        <div class="blog_posts">

                            @foreach (var item in Model)
                            {

                                <!-- Blog Post -->
                                <div class="blog_post">
                                    <div class="blog_post_container">

                                        <div class="location_icon">
                                            <span> <strong> @item.UpdateDate.ToString("dd-MM-yyyy") </strong></span>
                                        </div>

                                        @if (item.CoverPage == null)
                                        {
                                            <div class="blog_post_image"><img src="~/images/blog.jpg" alt="@item.Name"></div>
                                        }
                                        else
                                        {
                                            <div class="blog_post_image"><a href="@Url.Content("blog/" + item.BlogUrl)"><img src="~/images/Places/@item.SquareCover" asp-append-version="true"></a></div>
                                        }

                                        <div class="blog_post_content">

                                            <div class="blog_post_title">
                                                <h3>@item.Name</h3>
                                            </div>
                                            <div class="blog_post_tags">
                                                <ul class="d-flex flex-row align-items-start justify-content-start">
                                                    <li><a asp-action="Details" asp-route-name="@item.BlogUrl">@item.Name </a></li>
                                                    <li><a href="#">Urbano</a></li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



}
else
{

    <h1>En el momento no hay registros</h1>
}

@section Scripts {

    @{await Html.RenderPartialAsync("_ScriptsHomeIndexPartial");}
    @{await Html.RenderPartialAsync("_ScriptPlacesAliados");}

}