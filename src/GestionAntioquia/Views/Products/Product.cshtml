@model Model.DTOs.ProductDto

@{
    ViewData["Title"] = Model.Name.Substring(0, 10) + "...";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["imagen"] = Url.Content($"~/images/places/{Model.CoverPage}");
}

<!-- Home -->
<div class="home">
    <div class="parallax_background parallax-window" data-parallax="scroll" data-image-src="@ViewData["imagen"]" data-speed="0.8"></div>
    <div class="home_container">
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="home_content">
                        <div class="home_title">@Model.Name</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Rooms Area Start -->
<div class="roberto-rooms-area section-padding-100-0">
    <div class="container">
        <div class="row">
            <div class="col-12 col-lg-8">
                <!-- Single Room Details Area -->
                <div class="single-room-details-area mb-50">
                    <!-- Room Thumbnail Slides -->
                    <div class="room-thumbnail-slides mb-50">
                        <div id="room-thumbnail--slide" class="carousel slide" data-ride="carousel">
                            <div class="carousel-inner">

                                @{

                                    @foreach (var galleries in Model.Galleries)
                                    {
                                        string active = "";

                                        if (galleries == Model.Galleries.First())
                                        {
                                            active += "active";
                                        }

                                        <div class="carousel-item @active">
                                            <img src="~/images/Places/@galleries.NameImage" class="d-block w-100" alt="">
                                        </div>
                                    }
                                }


                            </div>

                            <ol class="carousel-indicators">

                                @{
                                    int count = 0;

                                    foreach (var gallery in Model.Galleries)
                                    {
                                        string active = "";
                                        count = count + 1;

                                        if (gallery == Model.Galleries.First())
                                        {
                                            active += "active";
                                        }
                                        <li data-target="#room-thumbnail--slide" data-slide-to="@count-1" class="@active">
                                            <img src="~/images/Places/@gallery.NameImage" class="d-block w-100" alt="">
                                        </li>
                                    }
                                }
                            </ol>
                        </div>
                    </div>

                    <!-- Room Features -->
                    <div class="room-features-area d-flex flex-wrap mb-50">
                        <h6>Lugar: <span>@Model.Place.Name</span></h6>

                        <h6>Valor: <span>@Model.Price COL</span></h6>
                        <h6>
                            Capacidad: <span>
                                @{string person = ""; if (Model.PersonNumber <= 1) { person += " persona"; } else { person += " personas"; }}
                                @Model.PersonNumber @person
                            </span>
                        </h6>
                        <h6>Cuidad: <span>@Model.Place.City</span></h6>
                    </div>

                    <h4>Descripción del Plan</h4>
                    <p class="text-justify">@Model.Description</p>

                    @*<ul>
                        <li><i class="fa fa-check"></i> Mauris molestie lectus in irdiet auctor.</li>
                        <li><i class="fa fa-check"></i> Dictum purus at blandit molestie.</li>
                        <li><i class="fa fa-check"></i> Neque non fermentum suscipit.</li>
                        <li><i class="fa fa-check"></i> Donec id dui ac massa malesuada.</li>
                        <li><i class="fa fa-check"></i> In sit amet sapien quis orci maximus.</li>
                        <li><i class="fa fa-check"></i> Vestibulum rutrum diam vel eros tristique.</li>
                    </ul>*@

                    <h4>Descripción del @Model.Place.Name</h4>
                    <p class="text-justify">@Model.Place.Description</p>
                </div>

                <!-- Room Service -->
                @*<div class="room-service mb-50">
                    <h4>Room Services</h4>

                    <ul>
                        <li><img src="~/images/icon1.png" alt=""> Air Conditioning</li>
                        <li><img src="~/images/icon2.png" alt=""> Free drinks</li>
                        <li><img src="~/images/icon3.png" alt=""> Restaurant quality</li>
                        <li><img src="~/images/icon4.png" alt=""> Cable TV</li>
                        <li><img src="~/images/icon5.png" alt=""> Unlimited Wifi</li>
                        <li><img src="~/images/icon6.png" alt=""> Service 24/24</li>
                    </ul>
                </div>*@

            </div>

            <div class="col-12 col-lg-4">
                <!-- Hotel Reservation Area -->
                <div class="hotel-reservation--area mb-100">
                    <form action="#" method="post">
                        <div class="form-group mb-30">
                            <label for="checkInDate">Date</label>
                            <div class="input-daterange" id="datepicker">
                                <div class="row no-gutters">
                                    <div class="col-6">
                                        <input type="text" class="input-small form-control appointment_date-check-in" placeholder="Entrada">
                                    </div>
                                    <div class="col-6">
                                        <input type="text" class="input-small form-control appointment_date-check-out" placeholder="Salida">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group mb-30">
                            <label for="guests">Guests</label>
                            <div class="row">
                                <div class="col-6">
                                    <select name="adults" id="guests" class="form-control">
                                        <option value="adults">Adults</option>
                                        <option value="01">01</option>
                                        <option value="02">02</option>
                                        <option value="03">03</option>
                                        <option value="04">04</option>
                                        <option value="05">05</option>
                                        <option value="06">06</option>
                                    </select>
                                </div>
                                <div class="col-6">
                                    <select name="children" id="children" class="form-control">
                                        <option value="children">Children</option>
                                        <option value="01">01</option>
                                        <option value="02">02</option>
                                        <option value="03">03</option>
                                        <option value="04">04</option>
                                        <option value="05">05</option>
                                        <option value="06">06</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn roberto-btn w-100">Check Available</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Rooms Area End -->

@section Scripts {

    @{await Html.RenderPartialAsync("_ScriptProductsProduct");}

}